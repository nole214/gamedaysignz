<p id="notice"><%= notice %></p>

<h1>Listing Signs</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @signs.each do |sign| %>
      <tr>
        <td><%= sign.description %></td>
        <td><%= sign.user.email if sign.user %></td>
        <td><%= link_to 'Show', sign %></td>
        <% if sign.user == current_user %>
        <td><%= link_to 'Edit', edit_sign_path(sign) %></td>
        <td><%= link_to 'Destroy', sign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Sign', new_sign_path %>
<% end %>

